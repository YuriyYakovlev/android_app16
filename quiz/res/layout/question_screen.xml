<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/splash_bg">
	
	<ScrollView 
   		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
			
	    <LinearLayout
		   	android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
		   	
		   	<!-- Question -->
	   	  	<LinearLayout android:id="@+id/lyt_question"
				android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="0.1"
				android:orientation="vertical">
		   	   	<TextView android:id="@+id/question"
					android:padding="5dp"
		   			android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_size_medium"
					android:textColor="@color/black" />
		   	   		
		    	<ImageView android:id="@+id/image"
		        	android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_gravity="center" />
		    
				<LinearLayout android:id="@+id/solutions" 
					android:paddingLeft="5dp"
		   			android:paddingRight="5dp"
		   			android:paddingBottom="5dp"
		   			android:layout_width="fill_parent"
					android:layout_height="fill_parent"
				   	android:orientation="vertical"/>
		   	</LinearLayout>
		   	
	   	  	<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="bottom"
				android:gravity="bottom"
				android:layout_weight="0.9"
				android:orientation="vertical">
			  	<View
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:background="@drawable/separator" />
				<LinearLayout 
					android:padding="10dp"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
				   	android:weightSum="3"
				   	android:orientation="horizontal">
			
					<TextView android:id="@+id/score"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/text_size_timer"/>	
					<TextView android:id="@+id/timer"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textColor="@color/black"
						android:paddingLeft="5dp"
						android:paddingRight="5dp"
						android:textSize="@dimen/text_size_timer" />		
			
					<Button android:id="@+id/footer_proceed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:background="@drawable/button"
						android:textColor="@color/black"
						android:textSize="@dimen/text_size_medium"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
						android:text="@string/next" />	
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>	    
  
	</ScrollView>

</LinearLayout>    
